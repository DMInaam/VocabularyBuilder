<?xml version="1.0" encoding="utf-8"?>
<!--
IMPROVEMENT 1: Switched to ConstraintLayout for a modern, flexible layout.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".QuizScoreActivity">

    <!--
    IMPROVEMENT 2: Added a visual icon (the trophy) to make the
    screen more engaging and celebratory.
    -->
    <ImageView
        android:id="@+id/score_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_trophy"
        app:layout_constraintBottom_toTopOf="@id/score_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="?attr/colorPrimary"
        android:contentDescription="Quiz complete trophy" />

    <TextView
        android:id="@+id/score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Finished!"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/final_score_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score_icon" />

    <TextView
        android:id="@+id/final_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score_title"
        tools:text="Your Score: 8/10" />

    <!--
    IMPROVEMENT 3: Used MaterialButton with our capsule background.
    IMPROVEMENT 4: Pinned the button to the bottom for a standard UI.
    -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_finish_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/capsule_button_background"
        android:text="Finish"
        android:textAppearance="?attr/textAppearanceButton"
        android:textColor="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>