<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordDetailActivity">

    <!-- IMPROVEMENT 1: Added a Toolbar for navigation and actions (Delete) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/detail_menu"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Word Detail" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content Scroller -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Word Header -->
            <TextView
                android:id="@+id/detail_word_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textStyle="bold"
                tools:text="Ground" />

            <TextView
                android:id="@+id/detail_part_of_speech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="italic"
                tools:text="[graÊŠnd] (noun)" />

            <!-- IMPROVEMENT 3: Wrapped core data (Meaning & Example) in a CardView -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="?attr/dividerColor"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Meaning -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_meaning"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_meaning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:textAppearance="?attr/textAppearanceBody1"
                        tools:text="The solid surface of the Earth, as opposed to the air or water." />

                    <!-- Example -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_example"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_example"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="She knelt down on the cold ground." />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- IMPROVEMENT 4: Used MaterialButton with Outlined style -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_category"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add to Category" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- IMPROVEMENT 5: FAB with correct tint -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/bookmark_word"
        app:srcCompat="@drawable/ic_bookmark_border"
        app:tint="?attr/colorOnPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
