    <!--
    IMPROVEMENT: Added 'app:iconTint'.
    This is CRITICAL. Since we removed the tint from the drawable,
    we must apply it here. '?attr/colorControlNormal' is the
    standard color for toolbar icons.
    -->
    <item
        android:id="@+id/action_search"
        android:icon="@drawable/ic_search"
        android:title="Search"
        app:iconTint="?attr/colorControlNormal"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/action_dictionary"
        android:icon="@drawable/ic_dictionary"
        android:title="Dictionary"
        app:iconTint="?attr/colorControlNormal"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/action_profile"
        android:icon="@drawable/ic_profile"
        android:title="Profile"
        app:iconTint="?attr/colorControlNormal"
        app:showAsAction="ifRoom" />

